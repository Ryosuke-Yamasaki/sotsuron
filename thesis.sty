\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{thesis}[2024/10/23 Thesis style for LuaLaTeX]

% 必要なパッケージ
\usepackage{amsmath}
\usepackage{graphicx}
\usepackage{caption}
\usepackage{titlesec}
\usepackage{cite}
\usepackage{luatexja} % 日本語対応

% ページ設定
\usepackage[a4paper, margin=2.5cm]{geometry}

% 行間を1.5倍
\renewcommand{\baselinestretch}{1.5}
\captionsetup{font={small,it}} % 図表のキャプション設定

% タイトル設定
\renewcommand{\maketitle}{
    \begin{center}
        {\LARGE \textbf{\@title}} \\
        \vspace{1em}
        {\large \textit{\@author}} \\
        \vspace{2em}
        {\textit{提出日: \textnormal{\@date}}}
    \end{center}
}

% セクションのスタイル
\titleformat{\section}
  {\Large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}
  {\large\bfseries}{\thesubsection}{1em}{}

% 図の設定
\graphicspath{{figures/}} % 図の格納フォルダ

% 参考文献のスタイル
\bibliographystyle{junsrt} % 日本語参考文献のスタイル

